# Docker Environment Configuration for Whale Tracker
# Copy this to .env and customize your settings

# Telegram Bot Configuration
ENABLE_TELEGRAM_ALERTS=true
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Network Configuration
USE_TESTNET=false

# Tracking Configuration (Docker Optimized)
# How often to check for position changes (seconds)
# Recommended: 10 for active monitoring, 30 for lighter load
POLLING_INTERVAL=10

# Minimum position size to track (USD)
# Lower values = more alerts, higher values = only big moves
MIN_POSITION_SIZE=1000

# Minimum position change to notify (USD)
# This prevents spam from small changes
MIN_CHANGE_THRESHOLD=500

# Logging Configuration
LOG_LEVEL=INFO

# Optional: Override API URLs (advanced users only)
# MAINNET_URL=https://api.hyperliquid.xyz
# TESTNET_URL=https://api.hyperliquid-testnet.xyz 